<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/white_ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="52dp"
            android:layout_height="52dp">

            <com.knms.shop.android.view.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_avatar" />

            <com.knms.shop.android.view.tv.MsgTipText
                android:id="@+id/tv_new_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white_ffffff"
                android:textSize="12dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:maxLength="15"
                    android:ellipsize="end"
                    android:text=""
                    android:textColor="@color/black_333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_decorate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_name"
                    android:background="@drawable/bg_rectangle_btn"
                    android:text="官方"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:maxLines="1"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:visibility="gone"
                    android:textColor="@color/black_333333"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_data"
                    android:layout_toRightOf="@+id/tv_decorate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="7dp"
                    android:maxLines="1"
                    android:gravity="right"
                    android:textColor="@color/gray_aaaaaa"
                    android:text="" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/gray_999999"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/line_comm_style"
        android:layout_height="1dp"
        android:background="@color/white_f5f5f5"
        android:layout_alignParentBottom="true" />
</RelativeLayout>