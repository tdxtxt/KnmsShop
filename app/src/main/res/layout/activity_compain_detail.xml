<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_ffffff"
              android:orientation="vertical">

    <include layout="@layout/top_title_layout"/>

    <View style="@style/line.hor"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="@dimen/order_detail_txt_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/order_detail_marlef"
                    android:gravity="center_vertical"
                    android:text="投诉时间"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/order_detail_txt_marlef"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <View style="@style/line.hor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="@dimen/order_detail_txt_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/order_detail_marlef"
                    android:gravity="center_vertical"
                    android:text="联系电话"/>

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/order_detail_txt_marlef"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <View style="@style/line.hor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="@dimen/order_detail_txt_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/order_detail_marlef"
                    android:gravity="center_vertical"
                    android:text="联系人"/>

                <TextView
                    android:id="@+id/contacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/order_detail_txt_marlef"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <View style="@style/line.hor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="@dimen/order_detail_txt_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/order_detail_marlef"
                    android:gravity="center_vertical"
                    android:text="投诉类型"/>

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/order_detail_txt_marlef"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <View style="@style/line.hor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_ffffff"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="@dimen/order_detail_txt_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/order_detail_marlef"
                    android:gravity="top"
                    android:text="投诉内容"/>

                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/order_detail_txt_marlef"
                    android:layout_marginRight="10dp"
                    android:gravity="top"/>
            </LinearLayout>

            <View
                style="@style/line.hor"
                android:layout_height="10dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/imgs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/order_detail_marlef"
                android:layout_marginRight="@dimen/order_detail_marlef"
                android:layout_marginTop="@dimen/order_detail_marlef"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>