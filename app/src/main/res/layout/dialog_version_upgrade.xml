<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/no_color"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_update_top"
        android:background="@color/no_color"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_below="@+id/iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_head"
        android:layout_alignRight="@+id/iv_head"
        android:background="@color/white_ffffff"
        android:orientation="vertical"
        android:paddingTop="12dp">
        <TextView
            android:id="@+id/tv_common_prompt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="新版本上线啦!"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />
        <com.knms.shop.android.view.MaxHeightLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mhv_HeightRatio="0.3">
            <android.support.v4.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_common_prompt_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:gravity="left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="1、更新UI样式\n2、修复闪退问题\n3、新增了更实用好玩的频道"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </com.knms.shop.android.view.MaxHeightLinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_common_prompt_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/common_gray"
                android:gravity="center"
                android:padding="6dp"
                android:text="暂不更新"
                android:textColor="@color/black_333333"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/btn_common_prompt_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/huang_FFDC50"
                android:gravity="center"
                android:padding="6dp"
                android:text="立即更新"
                android:textColor="@color/black_333333"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>