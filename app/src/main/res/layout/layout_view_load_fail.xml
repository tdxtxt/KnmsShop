<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/load_fail_view_new"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fafafa">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        android:contentDescription="@null"
        android:src="@drawable/icon_empty"/>

    <TextView
        android:id="@+id/text_fail_content_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:text="网络异常"
        android:textColor="#ff8000"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/text_fail_content_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="哎呀！数据打不开了，请检查网络是否异常！"
        android:textColor="#999999"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/textBtn_overLoaded_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58dp"
        android:layout_marginTop="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/bg_rectangle_btn"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="重新加载"
        android:textSize="18sp"/>
    </LinearLayout>
</RelativeLayout>